// https://code.visualstudio.com/docs/getstarted/settings#_default-settings

{
  "editor.tabSize": 2,
  "files.exclude": { // Tells File Explorer which files & folders to show/hide
    "**/.hg": false,
    "**/.svn": false,
    "**/CVS": false,
    "**/Thumbs.db": false,
    ".eslintrc.json": true,
    ".firebaserc": true,
    ".next": true,
    ".swc": true,
    ".vercel": true,
    "database-debug.log": true,
    "firestore-debug.log": true,
    "next-env.d.ts": true,
    "next.config.js": true,
    "node_modules": true,
    "package-lock.json": true,
    "pubsub-debug.log": true,
    "tsconfig.json": true,
    "tsconfig.tsbuildinfo": true,
    "ui-debug.log": true,
  },
  "search.exclude": { // Inherits all glob patterns from the `files.exclude` setting.
    ".firebaserc": false,
    "functions/.gitignore": true,
    "functions/lib": true,
    "functions/package.json": true,
    "functions/tsconfig.json": true,
    "next.config.js": false,
    "tsconfig.json": false,
  },
}